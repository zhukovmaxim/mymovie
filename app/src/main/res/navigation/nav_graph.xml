<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.myapplication21.ui.MovieListFragment"
        android:label="Моя коллекция"
        tools:layout="@layout/fragment_movie_list" />

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.myapplication21.ui.StatisticsFragment"
        android:label="Статистика"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.myapplication21.ui.SettingsFragment"
        android:label="Настройки"
        tools:layout="@layout/fragment_settings" />

    <activity
        android:id="@+id/addEditMovieActivity"
        android:name="com.example.myapplication21.ui.AddEditMovieActivity"
        android:label="Добавить фильм" />

    <activity
        android:id="@+id/movieDetailActivity"
        android:name="com.example.myapplication21.ui.MovieDetailActivity"
        android:label="Детали фильма" />
</navigation>

